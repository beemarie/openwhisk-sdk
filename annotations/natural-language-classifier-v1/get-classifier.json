{
  "description": "Get information about a classifier.",
  "parameters": [
    {
      "name": "username",
      "required": false,
      "bindTime": true,
      "description": "The service username"
    },
    {
      "name": "password",
      "required": false,
      "bindTime": true,
      "description": "The service password"
    },
    {
      "name": "headers",
      "required": false,
      "bindTime": false,
      "description": "The request headers"
    },
    {
      "name": "headers.X-Watson-Learning-Opt-Out",
      "required": false,
      "bindTime": false,
      "description": "opt-out of data collection"
    },
    {
      "name": "url",
      "required": false,
      "bindTime": false,
      "description": "override default service base url"
    },
    {
      "name": "classifier_id",
      "required": true,
      "bindTime": false,
      "description": "Classifier ID to query."
    }
  ],
  "sampleInput": {
    "username": "XXX",
    "password": "XXX",
    "classifier_id": "{classifier_id}"
  },
  "sampleOutput": {
    "classifier_id": "{classifier_id}",
    "name": "My Classifier",
    "language": "en",
    "created": "2015-05-28T18:01:57.393Z",
    "url":
      "https://gateway.watsonplatform.net/natural-language-classifier/api/v1/classifiers/{classifier_id}",
    "status": "Available",
    "status_description":
      "The classifier instance is now available and is ready to take classifier requests."
  }
}
