{
  "description": "Retrieves a specific voice available for speech synthesis.",
  "parameters": [
    {
      "name": "username",
      "required": false,
      "bindTime": true,
      "description": "The service username"
    },
    {
      "name": "password",
      "required": false,
      "bindTime": true,
      "description": "The service password"
    },
    {
      "name": "headers",
      "required": false,
      "bindTime": false,
      "description": "The request headers"
    },
    {
      "name": "headers.X-Watson-Learning-Opt-Out",
      "required": false,
      "bindTime": false,
      "description": "opt-out of data collection"
    },
    {
      "name": "url",
      "required": false,
      "bindTime": false,
      "description": "override default service base url"
    },
    {
      "name": "voice",
      "required": true,
      "bindTime": false,
      "description":
        "The voice for which information is to be returned. Retrieve available voices with the `GET /v1/voices` method."
    },
    {
      "name": "customization_id",
      "required": false,
      "bindTime": false,
      "description":
        "GUID of the custom voice model for which information is to be returned. You must make the request with service credentials created for the instance of the service that owns the custom model. Omit the parameter to see information about the specified voice with no customization."
    }
  ],
  "sampleInput": {
    "username": "XXX",
    "password": "XXX",
    "version_date": "2016-10-19",
    "voice": "en-US_AllisonVoice"
  },
  "sampleOutput": {
    "url":
      "https://stream.watsonplatform.net/text-to-speech/api/v1/voices/en-US_AllisonVoice",
    "name": "en-US_AllisonVoice",
    "language": "en-US",
    "customizable": true,
    "gender": "female",
    "description": "Allison: American English female voice.",
    "supported_features": {
      "custom_pronunciation": true,
      "voice_transformation": true
    }
  }
}
