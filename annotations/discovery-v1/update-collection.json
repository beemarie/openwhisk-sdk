{
  "description": "Update a collection.",
  "parameters": [
    {
      "name": "username",
      "required": false,
      "bindTime": true,
      "description": "The service username"
    },
    {
      "name": "password",
      "required": false,
      "bindTime": true,
      "description": "The service password"
    },
    {
      "name": "headers",
      "required": false,
      "bindTime": false,
      "description": "The request headers"
    },
    {
      "name": "headers.X-Watson-Learning-Opt-Out",
      "required": false,
      "bindTime": false,
      "description": "opt-out of data collection"
    },
    {
      "name": "url",
      "required": false,
      "bindTime": false,
      "description": "override default service base url"
    },
    {
      "name": "version_date",
      "required": true,
      "bindTime": false,
      "description": "Release date of the API version in YYYY-MM-DD format."
    },
    {
      "name": "environment_id",
      "required": true,
      "bindTime": false,
      "description": "The ID of the environment."
    },
    {
      "name": "collection_id",
      "required": true,
      "bindTime": false,
      "description": "The ID of the collection."
    },
    {
      "name": "name",
      "required": true,
      "bindTime": false,
      "description": "The name of the collection."
    },
    {
      "name": "description",
      "required": false,
      "bindTime": false,
      "description": "A description of the collection."
    },
    {
      "name": "configuration_id",
      "required": false,
      "bindTime": false,
      "description":
        "The ID of the configuration in which the collection is to be updated."
    }
  ],
  "sampleInput": {
    "username": "XXX",
    "password": "XXX",
    "version_date": "2016-10-19",
    "environment_id": "{environment_id}",
    "collection_id": "{collection_id}",
    "name": "{collection_name}",
    "description": "{description}",
    "configuration_id": "{configuration_id}"
  },
  "sampleOutput": {
    "name": "{collection_name}",
    "description": "{description}",
    "configuration_id": "{configuration_id}"
  }
}
